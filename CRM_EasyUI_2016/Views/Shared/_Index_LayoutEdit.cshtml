<!DOCTYPE html>
<html>
<head>
    <title>Main</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/filecss")
    @Styles.Render("~/Content/formcss/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery_from")
    @Scripts.Render("~/bundles/jquery_val", "~/bundles/jquery_val_plus")
    <script src="../../Scripts/easyui/jquery.easyui.min.js"
        type="text/javascript"></script>
    <link href="../../Style/style.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/easyui/easyui.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/easyui/locale/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.easyui.plus.js" type="text/javascript"></script>

    @Scripts.Render("~/bundles/common") 
    <style type="text/css">
        body
        {
            font-size: 12px;
        }
        .tip
        {
            height: 20px;
            border-bottom: 1px solid #CCC;
            margin-bottom: 10px;
        }
        .uploadify-button
        {
            background-color: transparent;
            border: none;
            padding: 0;
        }
        .uploadify:hover .uploadify-button
        {
            background-color: transparent;
        }
    </style>
    <script type="text/javascript">
        var arr_pageList = [10, 20, 30, 40, 50]
        var sys_PageSize = Number('10');
        var sys_pageList = [];
        if ($.inArray(sys_PageSize, arr_pageList) == -1) {
            $.merge(arr_pageList, sys_PageSize);
            sys_pageList = arr_pageList.concat(sys_PageSize);
        } else {
            sys_pageList = arr_pageList;
        }
        sys_pageList = sys_pageList.sort();
        var SystemConfig = { PageSize: sys_PageSize, pageList: sys_pageList };        
    </script>
</head>
<body>
    @RenderBody()
</body>
</html>
<script type="text/javascript">
    $(function () {
        $(window.parent.document).find('div.panel-loading').remove();
    }); 
</script>
